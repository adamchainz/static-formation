{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
      "RootDomainName": {
          "Description": "Domain name for your website (example.com)",
          "Type": "String"
      },
      "PriceClass": {
          "Description": "PriceClass for CloudFront. Defaults to US & Europe regions.",
          "Type": "String",
          "Default": "PriceClass_100",
          "AllowedValues" : ["PriceClass_All","PriceClass_200","PriceClass_100"]
      }
    },
    "Resources": {
        "StaticBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName" : {"Ref":"RootDomainName"},
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument":"index.html",
                    "ErrorDocument":"error.html"
                }
            }
        },
        "StaticBucketPolicy": {
          "Type": "AWS::S3::BucketPolicy",
          "DependsOn": "StaticBucket",
          "Properties": {
            "Bucket": {"Ref": "StaticBucket"},
            "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Sid": "PublicReadStaticBucketPolicy",
                    "Effect": "Allow",
                    "Principal": "*",
                    "Action": "s3:GetObject",
                    "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "StaticBucket" } , "/*" ]]}
                  }
                ]
            }
          }
        },
        "WWWAliasBucket": {
          "Type": "AWS::S3::Bucket",
          "DependsOn": "StaticBucket",
          "Properties": {
              "BucketName": {
                  "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]]
              },
              "AccessControl": "BucketOwnerFullControl",
              "WebsiteConfiguration": {
                  "RedirectAllRequestsTo": {
                      "HostName": {"Ref": "StaticBucket"}
                  }
              }
          }
        },
        "HostedZone": {
          "Type" : "AWS::Route53::HostedZone",
          "Properties" : {
            "Name": {
              "Fn::Join": ["", [{"Ref": "RootDomainName"}, "."]]
            }
          }
        },
        "CloudFrontDistribution": {
          "Type": "AWS::CloudFront::Distribution",
          "DependsOn": ["HostedZone","StaticBucket"],
          "Properties": {
            "DistributionConfig": {
              "Enabled": true,
              "DefaultRootObject": "index.html",
              "PriceClass": { "Ref": "PriceClass" },
              "Aliases": [
                { "Ref": "RootDomainName" },
                { "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]] }
              ],
              "Origins" : [
                {
                  "DomainName": {
                    "Fn::Join": ["", [
                      {"Ref":"RootDomainName"},
                      ".s3-website-",
                      { "Ref" : "AWS::Region" },
                      ".amazonaws.com"
                    ]]
                  },
                  "Id": {
                    "Fn::GetAtt": ["StaticBucket", "DomainName"]
                  },
                  "CustomOriginConfig": {
                    "HTTPPort": "80",
                    "HTTPSPort": "443",
                    "OriginProtocolPolicy": "http-only"
                  }
                }
              ],
              "DefaultCacheBehavior":  {
                "TargetOriginId": {
                  "Fn::GetAtt": ["StaticBucket", "DomainName"]
                },
                "ViewerProtocolPolicy": "allow-all",
                "ForwardedValues": {
                   "QueryString": true
                 }
              }
            }
          }
        },
        "RecordSetGroup": {
            "Type": "AWS::Route53::RecordSetGroup",
            "DependsOn": ["HostedZone", "CloudFrontDistribution"],
            "Properties": {
                "HostedZoneId": {
                  "Ref":  "HostedZone"
                },
                "Comment": "Zone apex alias.",
                "RecordSets": [
                    {
                        "Name": {"Ref": "RootDomainName"},
                        "Type": "A",
                        "AliasTarget": {
                            "HostedZoneId": "Z2FDTNDATAQYW2",
                            "DNSName": {"Fn::GetAtt":["CloudFrontDistribution", "DomainName"]}
                        }
                    },
                    {
                        "Name": {
                            "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]]
                        },
                        "Type": "CNAME",
                        "TTL" : "900",
                        "ResourceRecords" : [
                            {"Fn::GetAtt":["WWWAliasBucket", "DomainName"]}
                        ]
                    }
                ]
            }
        }
    },
    "Outputs": {
      "WebsiteURL": {
          "Value": {"Fn::GetAtt": ["StaticBucket", "WebsiteURL"]},
          "Description": "URL for website hosted on S3"
      },
      "WebsiteDomainName": {
        "Value":
        {
          "Fn::Join": ["", [
            {"Ref":"RootDomainName"},
            ".s3-website-",
            { "Ref" : "AWS::Region" },
            ".amazonaws.com"
          ]]
        },
        "Description": "Domain Name for the website hosted on S3"
      },
      "S3DomainName": {
        "Value": {"Fn::GetAtt": ["StaticBucket", "DomainName"]},
        "Description": "Domain Name for the S3 Bucket"
      },
      "CloudFrontDistributionDomainName": {
        "Value": {"Fn::GetAtt": ["CloudFrontDistribution", "DomainName"]},
        "Description": "Domain Name for the CloudFront Distribution"
      }
    }
}
