{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
      "RootDomainName": {
          "Description": "Domain name for your website (example.com)",
          "Type": "String"
      },
      "PriceClass": {
          "Description": "PriceClass for CloudFront. Defaults to US & Europe regions.",
          "Type": "String",
          "Default": "PriceClass_100",
          "AllowedValues" : ["PriceClass_All","PriceClass_200","PriceClass_100"]
      }
    },
    "Mappings" : {
      "RegionMap" : {
        "us-west-2" : { "url" : ".s3-website-us-west-2.amazonaws.com"}
      }
    },
    "Resources": {
        "StaticBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName" : {"Ref":"RootDomainName"},
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument":"index.html",
                    "ErrorDocument":"error.html"
                }
            }
        },
        "StaticBucketPolicy": {
          "Type": "AWS::S3::BucketPolicy",
          "DependsOn": "StaticBucket",
          "Properties": {
            "Bucket": {"Ref": "StaticBucket"},
            "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Sid": "PublicReadStaticBucketPolicy",
                    "Effect": "Allow",
                    "Principal": "*",
                    "Action": "s3:GetObject",
                    "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "StaticBucket" } , "/*" ]]}
                  }
                ]
            }
          }
        },
        "WWWAliasBucket": {
          "Type": "AWS::S3::Bucket",
          "DependsOn": "StaticBucket",
          "Properties": {
              "BucketName": {
                  "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]]
              },
              "AccessControl": "BucketOwnerFullControl",
              "WebsiteConfiguration": {
                  "RedirectAllRequestsTo": {
                      "HostName": {"Ref": "StaticBucket"}
                  }
              }
          }
        },
        "HostedZone": {
          "Type" : "AWS::Route53::HostedZone",
          "Properties" : {
            "Name": {
              "Fn::Join": ["", [{"Ref": "RootDomainName"}, "."]]
            }
          }
        }        
    },
    "Outputs": {
      "WebsiteURL": {
          "Value": {"Fn::GetAtt": ["StaticBucket", "WebsiteURL"]},
          "Description": "URL for website hosted on S3"
      },
      "DomainName": {
        "Value": {"Fn::GetAtt": ["StaticBucket", "DomainName"]},
        "Description": "Domain Name for website hosted on S3"
      },

      "WebsiteDomainName": {
        "Value":
        {
          "Fn::Join": ["", [
            {"Ref":"RootDomainName"},
            ".s3-website-",
            { "Ref" : "AWS::Region" },
            ".amazonaws.com"
          ]]
        },
        "Description": "Domain Name website hosted on S"
      },
      "WebsiteDomainNameMap": {
        "Value":
        {
          "Fn::Join": ["", [
            {"Ref":"RootDomainName"},
            {"Fn::FindInMap" : [ "RegionMap", { "Ref" : "AWS::Region" }, "url"]}
          ]]
        },
        "Description": "Domain Name website hosted on S"
      }



    }
}
