{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
      "RootDomainName": {
          "Description": "Domain name for your website (example.com)",
          "Type": "String"
      },
      "UseCloudFront": {
          "Description": "Determines if the site will CloudFront as a CDN.",
          "Type": "String",
          "Default": "true",
          "AllowedValues" : ["true","false"]
      },
      "PriceClass": {
          "Description": "PriceClass for CloudFront. Defaults to US & Europe regions.",
          "Type": "String",
          "Default": "PriceClass_100",
          "AllowedValues" : ["PriceClass_All","PriceClass_200","PriceClass_100"]
      }
    },
    "Conditions": {
      "CreateCloudFrontDistribution": {
        "Fn::Equals": [{"Ref": "UseCloudFront"}, "true"]
      },
      "DoNotCreateCloudFrontDistribution": {
        "Fn::Not": {
          "Fn::Equals": [{"Ref": "UseCloudFront"}, "true"]
        }
      }
    },
    "Resources": {
        "StaticBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName" : {"Ref":"RootDomainName"},
                "AccessControl": "PublicRead",
                "WebsiteConfiguration": {
                    "IndexDocument":"index.html",
                    "ErrorDocument":"error.html"
                }
            }
        },
        "StaticBucketPolicy": {
          "Type": "AWS::S3::BucketPolicy",
          "DependsOn": "StaticBucket",
          "Properties": {
            "Bucket": {"Ref": "StaticBucket"},
            "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Sid": "PublicReadStaticBucketPolicy",
                    "Effect": "Allow",
                    "Principal": "*",
                    "Action": "s3:GetObject",
                    "Resource": { "Fn::Join" : ["", ["arn:aws:s3:::", { "Ref" : "StaticBucket" } , "/*" ]]}
                  }
                ]
            }
          }
        },
        "WWWAliasBucket": {
          "Type": "AWS::S3::Bucket",
          "DependsOn": "StaticBucket",
          "Properties": {
              "BucketName": {
                  "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]]
              },
              "AccessControl": "BucketOwnerFullControl",
              "WebsiteConfiguration": {
                  "RedirectAllRequestsTo": {
                      "HostName": {"Ref": "StaticBucket"}
                  }
              }
          }
        },
        "HostedZone": {
          "Type" : "AWS::Route53::HostedZone",
          "Properties" : {
            "Name": {
              "Fn::Join": ["", [{"Ref": "RootDomainName"}, "."]]
            }
          }
        },
        "CloudFrontDistribution": {
          "Type": "AWS::CloudFront::Distribution",
          "DependsOn": ["HostedZone","StaticBucket"],
          "Condition" : "CreateCloudFrontDistribution",
          "Properties": {
            "DistributionConfig": {
              "Enabled": true,
              "DefaultRootObject": "index.html",
              "PriceClass": { "Ref": "PriceClass" },
              "Aliases": [
                { "Ref": "RootDomainName" },
                { "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]] }
              ],
              "Origins" : [
                {
                  "DomainName": {
                    "Fn::Join": ["", [
                      {"Ref":"RootDomainName"},
                      ".s3-website-",
                      { "Ref" : "AWS::Region" },
                      ".amazonaws.com"
                    ]]
                  },
                  "Id": {
                    "Fn::GetAtt": ["StaticBucket", "DomainName"]
                  },
                  "CustomOriginConfig": {
                    "HTTPPort": "80",
                    "HTTPSPort": "443",
                    "OriginProtocolPolicy": "http-only"
                  }
                }
              ],
              "DefaultCacheBehavior":  {
                "TargetOriginId": {
                  "Fn::GetAtt": ["StaticBucket", "DomainName"]
                },
                "ViewerProtocolPolicy": "allow-all",
                "ForwardedValues": {
                   "QueryString": true
                 }
              }
            }
          }
        },
        "CloudFrontDistributionDomainNameRecordSet": {
          "Type": "AWS::Route53::RecordSet",
          "DependsOn": ["HostedZone","CloudFrontDistribution"],
          "Condition" : "CreateCloudFrontDistribution",
          "Properties": {
            "Name": {"Ref": "RootDomainName"},
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": "Z2FDTNDATAQYW2",
              "DNSName": { "Fn::GetAtt":["CloudFrontDistribution", "DomainName"]}
            }
          }
        },
        "DomainNameRecordSet": {
          "Type": "AWS::Route53::RecordSet",
          "DependsOn": ["HostedZone"],
          "Condition" : "DoNotCreateCloudFrontDistribution",
          "Properties": {
            "Name": {"Ref": "RootDomainName"},
            "Type": "A",
            "AliasTarget": {
              "HostedZoneId": {"Ref":  "HostedZone"}
              "DNSName": {
                "Fn::Join": ["", [
                  {"Ref":"RootDomainName"},
                  ".s3-website-",
                  { "Ref" : "AWS::Region" },
                  ".amazonaws.com"
                ]]
              }
            }
          }
        },
        "WWWAliasRecordSet": {
          "Type": "AWS::Route53::RecordSet",
          "DependsOn": ["HostedZone"],
          "Properties": {
            "Name": { "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]]},
            "Type": "CNAME",
            "TTL" : "900",
            "ResourceRecords" : [{"Fn::GetAtt":["WWWAliasBucket", "DomainName"]}]
          }
        },

        "RecordSetGroup": {
          "Type": "AWS::Route53::RecordSetGroup",
          "DependsOn": ["HostedZone"],
          "Properties": {
              "HostedZoneId": {
                "Ref":  "HostedZone"
              },
              "Comment": "Zone apex alias.",
              "RecordSets": [
                  {
                      "Name": {"Ref": "RootDomainName"},
                      "Type": "A",
                      "AliasTarget": {
                          "HostedZoneId": "Z2FDTNDATAQYW2",
                          "DNSName": {
                            "Fn::If" : [
                              "CreateCloudFrontDistribution",
                              {"Fn::GetAtt":["CloudFrontDistribution", "DomainName"]},
                              {
                                "Fn::Join": ["", [
                                  {"Ref":"RootDomainName"},
                                  ".s3-website-",
                                  { "Ref" : "AWS::Region" },
                                  ".amazonaws.com"
                                ]]
                              }
                            ]}
                      }
                  },
                  {
                      "Name": {
                          "Fn::Join": ["", ["www.", {"Ref":"RootDomainName"}]]
                      },
                      "Type": "CNAME",
                      "TTL" : "900",
                      "ResourceRecords" : [
                          {"Fn::GetAtt":["WWWAliasBucket", "DomainName"]}
                      ]
                  }
              ]
          }
        }
    },
    "Outputs": {
      "WebsiteURL": {
          "Value": {"Fn::GetAtt": ["StaticBucket", "WebsiteURL"]},
          "Description": "URL for website hosted on S3"
      },
      "WebsiteDomainName": {
        "Value":
        {
          "Fn::Join": ["", [
            {"Ref":"RootDomainName"},
            ".s3-website-",
            { "Ref" : "AWS::Region" },
            ".amazonaws.com"
          ]]
        },
        "Description": "Domain Name for the website hosted on S3"
      },
      "S3DomainName": {
        "Value": {"Fn::GetAtt": ["StaticBucket", "DomainName"]},
        "Description": "Domain Name for the S3 Bucket"
      },
      "CloudFrontDistributionDomainName": {
        "Value": {"Fn::GetAtt": ["CloudFrontDistribution", "DomainName"]},
        "Description": "Domain Name for the CloudFront Distribution",
        "Condition" : "CreateCloudFrontDistribution"
      }
    }
}
